    <script>
        const baseIngredients = {
            kartoshka: { name: "Kartoshka", amount: 3.5, unit: "dona" }, sabzi: { name: "Sabzi", amount: 1.5, unit: "dona" },
            tuxum: { name: "Tuxum", amount: 3, unit: "dona" }, tovuq: { name: "Tovuq go‚Äòshti", amount: 200, unit: "g", type: "protein", id: "chicken-choice" },
            kolbasa: { name: "Kolbasa", amount: 200, unit: "g", type: "protein", id: "sausage-choice" }, bodring: { name: "Tuzlangan bodring", amount: 2.5, unit: "dona" },
            noxat: { name: "Yashil no‚Äòxat", amount: 200, unit: "g" }, mayonez: { name: "Mayonez", amount: [150, 200], unit: "g" },
            tuz: { name: "Tuz", unit: "ta‚Äôbga ko‚Äòra" }, murch: { name: "Qora murch", unit: "ta‚Äôbga ko‚Äòra" }, kokat: { name: "Ko‚Äòkat", unit: "ixtiyoriy" }
        };
        const baseServings = 4;
        const servingsSelect = document.getElementById('servings-select');
        const ingredientList = document.getElementById('ingredient-list');
        const ingredientTitle = document.getElementById('ingredient-title');
        const proteinChoices = document.querySelectorAll('input[type="checkbox"]');

        function updateRecipe() {
            const currentServings = parseInt(servingsSelect.value);
            const ratio = currentServings / baseServings;
            ingredientTitle.textContent = `Masalliqlar (${currentServings} kishilik):`;
            ingredientList.innerHTML = '';
            for (const key in baseIngredients) {
                const item = baseIngredients[key];
                if (item.type === 'protein' && !document.getElementById(item.id).checked) continue;
                const li = document.createElement('li');
                let displayAmountText = "";
                if (Array.isArray(item.amount)) {
                    displayAmountText = `${Math.round(item.amount[0] * ratio)}‚Äì${Math.round(item.amount[1] * ratio)}`;
                } else if (item.amount) {
                    const newAmount = item.amount * ratio;
                    displayAmountText = (item.unit === "dona") ? Math.ceil(newAmount) : parseFloat(newAmount.toFixed(1));
                }
                li.textContent = `${item.name} ‚Äì ${displayAmountText} ${item.unit}`;
                ingredientList.appendChild(li);
            }
        }
        servingsSelect.addEventListener('change', updateRecipe);
        proteinChoices.forEach(checkbox => checkbox.addEventListener('change', updateRecipe));
        
        // Rasm va PDF saqlash funksiyalari
        const { jsPDF } = window.jspdf;
        const saveImageBtn = document.getElementById('save-image-btn');
        const savePdfBtn = document.getElementById('save-pdf-btn');
        const captureArea = document.getElementById('capture-area');

        saveImageBtn.addEventListener('click', () => {
            html2canvas(captureArea, { scale: 2 }).then(canvas => {
                const link = document.createElement('a');
                link.download = `Aliviya-Salati-${servingsSelect.value}-kishilik.png`;
                link.href = canvas.toDataURL('image/png');
                link.click();
            });
        });

        savePdfBtn.addEventListener('click', () => {
            const doc = new jsPDF({ orientation: 'p', unit: 'mm', format: 'a4' });
            captureArea.style.boxShadow = 'none'; // PDFda soya ko'rinmasligi uchun
            doc.html(captureArea, {
                callback: function (doc) {
                    doc.save(`Aliviya-Salati-${servingsSelect.value}-kishilik.pdf`);
                    captureArea.style.boxShadow = ''; // Soyani qaytarish
                },
                x: 10, y: 10, width: 190, windowWidth: captureArea.scrollWidth
            });
        });

        document.addEventListener('DOMContentLoaded', updateRecipe);
    </script>
</body>
